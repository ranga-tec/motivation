@model Poms.Domain.Entities.Condition

@{
    ViewData["Title"] = "Delete Condition";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> Delete Condition</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5>Are you sure you want to delete this condition?</h5>
                    <p class="mb-0">This action cannot be undone.</p>
                </div>

                <table class="table table-borderless">
                    <tr>
                        <th width="30%">Code:</th>
                        <td><strong>@Model.Code</strong></td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Body Region:</th>
                        <td>
                            <span class="badge bg-info">@Model.BodyRegion</span>
                        </td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <tr>
                            <th>Description:</th>
                            <td>@Model.Description</td>
                        </tr>
                    }
                </table>

                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Condition
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>