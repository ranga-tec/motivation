@model Poms.Domain.Entities.Condition

@{
    ViewData["Title"] = "Condition Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4><i class="fas fa-info-circle"></i> Condition Details</h4>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th width="30%">Code:</th>
                        <td><strong class="text-primary">@Model.Code</strong></td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Body Region:</th>
                        <td>
                            <span class="badge bg-info">@Model.BodyRegion</span>
                        </td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <tr>
                            <th>Description:</th>
                            <td>@Model.Description</td>
                        </tr>
                    }
                    <tr>
                        <th>Created:</th>
                        <td>@Model.CreatedAt.ToString("dd-MMM-yyyy HH:mm") by @(Model.CreatedBy ?? "System")</td>
                    </tr>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <tr>
                            <th>Last Updated:</th>
                            <td>@Model.UpdatedAt.Value.ToString("dd-MMM-yyyy HH:mm") by @(Model.UpdatedBy ?? "System")</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>