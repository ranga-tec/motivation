@model Poms.Domain.Entities.Patient

@{
    ViewData["Title"] = "Patient Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Patient Details</h1>
        <p class="text-muted mb-0">Patient Number: <strong class="text-primary">@Model.PatientNumber</strong></p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Navigation Tabs -->
<ul class="nav nav-tabs mb-4" id="patientTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">
            <i class="bi bi-person"></i> Personal Information
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="conditions-tab" data-bs-toggle="tab" data-bs-target="#conditions" type="button">
            <i class="bi bi-heart-pulse"></i> Conditions
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="episodes-tab" data-bs-toggle="tab" data-bs-target="#episodes" type="button">
            <i class="bi bi-clipboard2-pulse"></i> Episodes
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="documents-tab" data-bs-toggle="tab" data-bs-target="#documents" type="button">
            <i class="bi bi-file-earmark-text"></i> Documents
        </button>
    </li>
</ul>

<div class="tab-content" id="patientTabsContent">
    <!-- Personal Information Tab -->
    <div class="tab-pane fade show active" id="info" role="tabpanel">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Personal Details</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Name:</th>
                                <td>@Model.FirstName @Model.LastName</td>
                            </tr>
                            <tr>
                                <th>Date of Birth:</th>
                                <td>@(Model.Dob?.ToString("dd-MMM-yyyy") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Sex:</th>
                                <td>@Model.Sex</td>
                            </tr>
                            <tr>
                                <th>National ID:</th>
                                <td>@(Model.NationalId ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Registration Date:</th>
                                <td>@Model.RegistrationDate.ToString("dd-MMM-yyyy")</td>
                            </tr>
                            <tr>
                                <th>Referred By:</th>
                                <td>@(Model.ReferredBy ?? "N/A")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Contact Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Address:</th>
                                <td>
                                    @Model.Address1<br />
                                    @Model.Address2
                                </td>
                            </tr>
                            <tr>
                                <th>Province:</th>
                                <td>@Model.Province.Name</td>
                            </tr>
                            <tr>
                                <th>District:</th>
                                <td>@Model.District.Name</td>
                            </tr>
                            <tr>
                                <th>Center:</th>
                                <td>@Model.Center.Name</td>
                            </tr>
                            <tr>
                                <th>Phone:</th>
                                <td>
                                    @(Model.Phone1 ?? "N/A")
                                    @if (!string.IsNullOrEmpty(Model.Phone2))
                                    {
                                        <br />@Model.Phone2
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@(Model.Email ?? "N/A")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.GuardianName))
        {
            <div class="card mb-3">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Guardian Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-sm">
                                <tr>
                                    <th width="40%">Name:</th>
                                    <td>@Model.GuardianName</td>
                                </tr>
                                <tr>
                                    <th>Relationship:</th>
                                    <td>@(Model.GuardianRelationship ?? "N/A")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-sm">
                                <tr>
                                    <th width="40%">Address:</th>
                                    <td>@(Model.GuardianAddress ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <th>Phone:</th>
                                    <td>
                                        @(Model.GuardianPhone1 ?? "N/A")
                                        @if (!string.IsNullOrEmpty(Model.GuardianPhone2))
                                        {
                                            <br />@Model.GuardianPhone2
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Remarks))
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0">Remarks</h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Remarks</p>
                </div>
            </div>
        }
    </div>

    <!-- Conditions Tab -->
    <div class="tab-pane fade" id="conditions" role="tabpanel">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Patient Conditions</h5>
                <a asp-controller="PatientConditions" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus-circle"></i> Add Condition
                </a>
            </div>
            <div class="card-body">
                @if (Model.Conditions.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Condition</th>
                                <th>Body Region</th>
                                <th>Side</th>
                                <th>Type</th>
                                <th>Onset Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var condition in Model.Conditions)
                            {
                                <tr>
                                    <td>@condition.Condition.Name</td>
                                    <td>@condition.Condition.BodyRegion</td>
                                    <td>@condition.Side</td>
                                    <td>
                                        <span class="badge @(condition.Type == Poms.Domain.Enums.ConditionType.Primary ? "bg-primary" : "bg-secondary")">
                                            @condition.Type
                                        </span>
                                    </td>
                                    <td>@(condition.OnsetDate?.ToString("dd-MMM-yyyy") ?? "N/A")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="PatientConditions" asp-action="Edit" asp-route-id="@condition.Id" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-controller="PatientConditions" asp-action="Delete" asp-route-id="@condition.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this condition?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No conditions recorded yet.</p>
                }
            </div>
        </div>
    </div>

    <!-- Episodes Tab -->
    <div class="tab-pane fade" id="episodes" role="tabpanel">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Clinical Episodes</h5>
                <a asp-controller="Episodes" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-sm btn-success">
                    <i class="fas fa-file-plus"></i> New Episode
                </a>
            </div>
            <div class="card-body">
                @if (Model.Episodes.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Opened</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var episode in Model.Episodes)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-info">@episode.Type</span>
                                    </td>
                                    <td>@episode.OpenedOn.ToString("dd-MMM-yyyy")</td>
                                    <td>
                                        @if (episode.ClosedOn.HasValue)
                                        {
                                            <span class="badge bg-secondary">Closed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Open</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Episodes" asp-action="Details" asp-route-id="@episode.Id" class="btn btn-sm btn-info">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No episodes recorded yet.</p>
                }
            </div>
        </div>
    </div>

    <!-- Documents Tab -->
    <div class="tab-pane fade" id="documents" role="tabpanel">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Patient Documents</h5>
                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                    <i class="bi bi-upload"></i> Upload Document
                </button>
            </div>
            <div class="card-body">
                @if (Model.Documents.Any())
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>File Name</th>
                                <th>Uploaded</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in Model.Documents)
                            {
                                <tr>
                                    <td>@doc.Title</td>
                                    <td>@doc.FileName</td>
                                    <td>@doc.UploadedAt.ToString("dd-MMM-yyyy HH:mm")</td>
                                    <td>
                                        <a asp-controller="Documents" asp-action="Download" asp-route-id="@doc.Id" class="btn btn-sm btn-success">Download</a>
                                        <a asp-controller="Documents" asp-action="Delete" asp-route-id="@doc.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No documents uploaded yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Documents" asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" name="patientId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" name="title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">File</label>
                        <input type="file" name="file" class="form-control" required />
                        <small class="text-muted">Allowed: PDF, JPG, PNG, DOCX (Max 10MB)</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Remarks</label>
                        <textarea name="remarks" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>
