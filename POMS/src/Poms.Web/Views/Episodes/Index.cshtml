@model IEnumerable<Poms.Domain.Entities.Episode>

@{
    ViewData["Title"] = "Episodes";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Treatment Episodes</h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Episode
            </a>
        </div>

        <div class="card">
            <div class="card-header">
                <form asp-action="Index" method="get" class="row g-3">
                    <div class="col-md-6">
                        <input type="text" name="searchString" value="@ViewBag.SearchString"
                               class="form-control" placeholder="Search by patient number or name..." />
                    </div>
                    <div class="col-md-4">
                        <select name="type" class="form-select">
                            <option value="">All Types</option>
                            @foreach (var type in Enum.GetValues(typeof(Poms.Domain.Enums.EpisodeType)))
                            {
                                <option value="@type" selected="@(ViewBag.Type?.ToString() == type.ToString())">@type</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Patient</th>
                                    <th>Type</th>
                                    <th>Opened</th>
                                    <th>Status</th>
                                    <th>Details</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.Patient.PatientNumber</strong><br />
                                            <small class="text-muted">@item.Patient.FirstName @item.Patient.LastName</small>
                                        </td>
                                        <td>
                                            <span class="badge @(item.Type == Poms.Domain.Enums.EpisodeType.Prosthetic ? "bg-primary" :
                                                                  item.Type == Poms.Domain.Enums.EpisodeType.Orthotic ? "bg-success" : "bg-info")">
                                                @item.Type
                                            </span>
                                        </td>
                                        <td>@item.OpenedOn.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (item.ClosedOn.HasValue)
                                            {
                                                <span class="badge bg-secondary">Closed</span><br />
                                                <small class="text-muted">@item.ClosedOn.Value.ToString("dd/MM/yyyy")</small>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Active</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Type == Poms.Domain.Enums.EpisodeType.Prosthetic && item.Prosthetic != null)
                                            {
                                                <small>@item.Prosthetic.AmputationType - @item.Prosthetic.Side</small>
                                            }
                                            else if (item.Type == Poms.Domain.Enums.EpisodeType.Orthotic && item.Orthotic != null)
                                            {
                                                <small>@item.Orthotic.BodyRegion - @item.Orthotic.Side</small>
                                            }
                                            else if (item.Type == Poms.Domain.Enums.EpisodeType.SpinalOrthosis)
                                            {
                                                <small>Spinal Support</small>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (ViewBag.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i"
                                           asp-route-searchString="@ViewBag.SearchString"
                                           asp-route-type="@ViewBag.Type">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-stethoscope fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No episodes found</h5>
                        <p class="text-muted">
                            @if (string.IsNullOrEmpty(ViewBag.SearchString as string))
                            {
                                <text>Start by creating the first treatment episode.</text>
                            }
                            else
                            {
                                <text>Try adjusting your search criteria.</text>
                            }
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>