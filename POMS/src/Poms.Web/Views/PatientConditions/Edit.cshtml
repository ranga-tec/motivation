@model Poms.Domain.Entities.PatientCondition

@{
    ViewData["Title"] = "Edit Patient Condition";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-edit"></i> Edit Patient Condition</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <strong>Patient:</strong> @ViewBag.PatientNumber - @ViewBag.PatientName
                </div>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="PatientId" />

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="ConditionId" class="form-label">Medical Condition</label>
                                <select asp-for="ConditionId" class="form-select" asp-items="ViewBag.Conditions" required>
                                    <option value="">-- Select Condition --</option>
                                </select>
                                <div asp-validation-for="ConditionId" class="text-danger"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Side" class="form-label">Side</label>
                                <select asp-for="Side" class="form-select" required>
                                    <option value="">-- Select Side --</option>
                                    @foreach (Poms.Domain.Enums.Side side in Enum.GetValues(typeof(Poms.Domain.Enums.Side)))
                                    {
                                        <option value="@((int)side)">@side</option>
                                    }
                                </select>
                                <div asp-validation-for="Side" class="text-danger"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Type" class="form-label">Condition Type</label>
                                <select asp-for="Type" class="form-select" required>
                                    <option value="">-- Select Type --</option>
                                    @foreach (Poms.Domain.Enums.ConditionType type in Enum.GetValues(typeof(Poms.Domain.Enums.ConditionType)))
                                    {
                                        <option value="@((int)type)">@type</option>
                                    }
                                </select>
                                <div asp-validation-for="Type" class="text-danger"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="OnsetDate" class="form-label">Onset Date (Optional)</label>
                                <input asp-for="OnsetDate" class="form-control" type="date" />
                                <div asp-validation-for="OnsetDate" class="text-danger"></div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Remarks" class="form-label">Remarks</label>
                        <textarea asp-for="Remarks" class="form-control" rows="3"
                                  placeholder="Any additional notes about this condition..."></textarea>
                        <div asp-validation-for="Remarks" class="text-danger"></div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-controller="Patients" asp-action="Details" asp-route-id="@Model.PatientId" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Condition
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}