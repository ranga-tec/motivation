{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet restore POMS/POMS.sln && dotnet build POMS/POMS.sln -c Release"
  },
  "deploy": {
    "startCommand": "cd POMS/src/Poms.Web && dotnet run --no-build -c Release",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
